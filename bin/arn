#!/bin/sh

ARN_MNGR=/usr/sbin/arn-mngr
#ARN_MNGR_JSON=/usr/sbin/arn-mngr-json

help() {
  echo "usage: "
  echo "  arn [-a] [-c] [-r] [-p] [-b] [-f]"
  echo "  arn [-C n] [-R 0|1] [-B 6|8|16|24] [-P n] [-F n]"
  echo "  arn [-M car|ear|mesh]"
}

arn_mode() {
    local MODE=$1
    if [ "$MODE" == "mesh" ]; then
        /usr/sbin/arn-wds-mesh
    elif [ "$MODE" == "car" ]; then
        /usr/sbin/arn-wds-car
    else
        /usr/sbin/arn-wds-ear
    fi
}

monitor() {
    while true; do
        arn -a
        sleep 1
        clear
    done
}


# FIXME: add all common commands
# break when got a valid option
# JSON/all/monitor/Mode/help
# TODO: channel/region/chanbw/txpower/freq
while getopts "jamM:cC:rR:bB:pP:fF:h" OPT; do
    case "$OPT" in
        j)
            $ARN_MNGR json
            break
            ;;
        f)
            $ARN_MNGR freq
            break
            ;;
        F)
            $ARN_MNGR freq $OPTARG
            break
            ;;
        c)
            $ARN_MNGR channel
            break
            ;;
        C)
            $ARN_MNGR channel $OPTARG
            break
            ;;
        r)
            $ARN_MNGR region
            break
            ;;
        R)
            $ARN_MNGR region $OPTARG
            break
            ;;
        p)
            $ARN_MNGR txpower
            break
            ;;
        P)
            $ARN_MNGR txpower $OPTARG
            break
            ;;
        b)
            $ARN_MNGR chanbw
            break
            ;;
        B)
            $ARN_MNGR chanbw $OPTARG
            break
            ;;
        M)
            arn_mode $OPTARG
            break
            ;;
        m)
            monitor
            ;;
        a)
            date; echo '----------------------------'
            $ARN_MNGR all 2>/dev/null
            break
            ;;
        h|?)
            date; echo '----------------------------'
            help; break
            ;;
    esac
done
shift $((OPTIND - 1))
